<div class='account-page' id='account-page'>
  <div class='account-page__inner clearfix'>
    <div class='account-page__inner--left account-page__header'>
      <h2>Create Account</h2>
      <h5>新規アカウントの作成</h5>
    </div>
    <div class='account-page__inner--right user-form'>
      <%= form_with model: resource, as: resource_name, url: registration_path(resource_name), local: true do |f|%>
        <%= devise_error_messages!%>
        <div class='field'>
          <div class='full-name'>
            <div class='field-label'>
              <%= f.label "性" %>
            </div>
            <div class='field-input'>
              <%= f.text_field :family_name %>
            </div>
            <div class='field-label'>
              <%= f.label "名" %>
            </div>
            <div class='field-input'>
              <%= f.text_field :last_name %>
            </div>
          </div>
        </div>
        <div class='field'>
          <div class=field-label>
            <%= f.label "電話番号"%>
          </div>
          <div class='field-input'>
            <%= f.text_field :phone_number%>
          </div>
        </div>
        <div class='field'>
          <div class=field-label>
            <%= f.label "会社名"%>
          </div>
          <div class='field-input'>
            <%= f.text_field :company_name %>
          </div>
        </div>
        <div class='field'>
          <div class=field-label>
            <%= f.label "役職"%>
          </div>
          <div class='field-input'>
            <%= f.collection_select(:position_id, Position.all, :id, :name, {}, {class:"position-select"}) %>
          </div>
        </div>
        <div class='field'>
          <div class='field-label'>
            <%= f.label :email%>
          </div>
          <div class='field-input'>
            <%= f.email_field :email%>
          </div>
        </div>
        <div class='field'>
          <div class='field-label'>
            <%= f.label :password%>
            <i>(英数字6文字以上)</i>
          </div>
          <div class='field-input'>
            <%= f.password_field :password, autocomplete: "off"%>
          </div>
        </div>
        <div class='field'>
          <div class='field-label'>
            <%= f.label :password_confirmation%>
          </div>
          <div class='field-input'>
            <%= f.password_field :password_confirmation, autocomplete: "off"%>
          </div>
        </div>
        <div class='actions'>
          <%= f.submit "Create Account", class: 'btn'%>
        </div>
      </div>
    <% end %>
  </div>
</div>
